@model Spendix.Web.ViewModels.Category.CategoriesViewModel
@{
    ViewData["Title"] = "Categories";
}

@section Styles {
}

@section Scripts {
    <partial name="_HandlebarsScripts" />
    <environment include="Development">
        <script src="~/js/views/category/categories.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/views/category/categories.js" asp-append-version="true"></script>
    </environment>

    <script id="category-template" type="text/x-handlebars-template">
        <div class="card card-outline-info mb-2">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-body">
                            <div class="row" id="">
                                <div class="col-md-11">
                                    <div class="form-group">
                                        <input type="text" id="" name="" class="form-control" placeholder="Category Name" value="">
                                    </div>
                                </div>
                                <div class="col-md-1">
                                    <a href="javascript:void(0)" class="float-right mt-2"><i class="fas fa-fw fa-trash"></i></a>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4"></div>
                                <div class="col-8 subCategoryHeader d-none">
                                    Sub Categories
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <a href="javascript:void(0)" class="float-right addSubCategory"><i class="fas fa-fw fa-plus"></i> add sub category</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </script>

    <script id="sub-category-template" type="text/x-handlebars-template">
        <div class="row">
            <div class="col-4">
            </div>
            <div class="col-7">
                <div class="form-group">
                    <input type="text" id="" name="" class="form-control" placeholder="Sub Category Name" value="">
                </div>
            </div>
            <div class="col-1">
                <a href="javascript:void(0)" class="float-right mt-2"><i class="fas fa-fw fa-trash"></i></a>
            </div>
        </div>
    </script>
}
<form asp-controller="Category" asp-action="Categories" method="post">
    <div class="row">
        <div class="col-6">
            <h3>Payment Categories</h3>
        </div>
        <div class="col-6">
            <h3>Deposit Categories</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-6" id="paymentCategoryColumn">
            @foreach (var category in Model.PaymentCategories)
            {
                <div class="card card-outline-info mb-2">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-body">
                                    <div class="row" id="">
                                        <div class="col-md-11">
                                            <div class="form-group">
                                                <input type="text" id="" name="" class="form-control" placeholder="Category Name" value="@category.Name">
                                            </div>
                                        </div>
                                        <div class="col-md-1">
                                            <a href="javascript:void(0)" class="float-right mt-2"><i class="fas fa-fw fa-trash"></i></a>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"></div>
                                        <div class="col-8 subCategoryHeader @(!category.BankAccountTransactionSubCategories.Any() ? "d-none" : string.Empty)">
                                            Sub Categories
                                        </div>
                                    </div>
                                    @foreach (var subCategory in category.BankAccountTransactionSubCategories.OrderBy(x => x.Name))
                                    {
                                        <div class="row">
                                            <div class="col-4">
                                            </div>
                                            <div class="col-7">
                                                <div class="form-group">
                                                    <input type="text" id="" name="" class="form-control" placeholder="Sub Category Name" value="  @subCategory.Name">
                                                </div>
                                            </div>
                                            <div class="col-1">
                                                <a href="javascript:void(0)" class="float-right mt-2"><i class="fas fa-fw fa-trash"></i></a>
                                            </div>
                                        </div>
                                    }
                                    <div class="row addSubCategoryRow">
                                        <div class="col-md-12">
                                            <a href="javascript:void(0)" class="float-right addSubCategory"><i class="fas fa-fw fa-plus"></i> add sub category</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="col-6" id="depositCategoryColumn">
            @foreach (var category in Model.DepositCategories)
            {
                <div class="card card-outline-info mb-2">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-body">
                                    <div class="row" id="">
                                        <div class="col-md-11">
                                            <div class="form-group">
                                                <input type="text" id="" name="" class="form-control" placeholder="Category Name" value="@category.Name">
                                            </div>
                                        </div>
                                        <div class="col-md-1">
                                            <a href="javascript:void(0)" class="float-right mt-2"><i class="fas fa-fw fa-trash"></i></a>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"></div>
                                        <div class="col-8 subCategoryHeader @(!category.BankAccountTransactionSubCategories.Any() ? "d-none" : string.Empty)">
                                            Sub Categories
                                        </div>
                                    </div>
                                    @foreach (var subCategory in category.BankAccountTransactionSubCategories.OrderBy(x => x.Name))
                                    {
                                        <div class="row">
                                            <div class="col-4">
                                            </div>
                                            <div class="col-7">
                                                <div class="form-group">
                                                    <input type="text" id="" name="" class="form-control" placeholder="Sub Category Name" value="  @subCategory.Name">
                                                </div>
                                            </div>
                                            <div class="col-1">
                                                <a href="javascript:void(0)" class="float-right mt-2"><i class="fas fa-fw fa-trash"></i></a>
                                            </div>
                                        </div>
                                    }
                                    <div class="row">
                                        <div class="col-md-12">
                                            <a href="javascript:void(0)" class="float-right addSubCategory"><i class="fas fa-fw fa-plus"></i> add sub category</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <a href="javascript:void(0)" class="float-right" id="addPaymentCategory"><i class="fas fa-fw fa-plus"></i> add payment category</a>
        </div>
        <div class="col-6">
            <a href="javascript:void(0)" class="float-right" id="addDepositCategory"><i class="fas fa-fw fa-plus"></i> add deposit category</a>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-12">
            <div class="card card-outline-info">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <button class="btn btn-primary float-right" type="submit">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>