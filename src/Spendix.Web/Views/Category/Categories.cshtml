@model Spendix.Web.ViewModels.Category.CategoriesViewModel
@{
    ViewData["Title"] = "Categories";
}

@section Styles {
}

@section Scripts {
    <partial name="_HandlebarsScripts" />
    <environment include="Development">
        <script src="~/js/views/category/categories.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/views/category/categories.js" asp-append-version="true"></script>
    </environment>

    <script id="category-template" type="text/x-handlebars-template">
      
    </script>
}
<form asp-controller="Category" asp-action="Categories" method="post">
    <div class="row">
        <div class="col-6">
            <div class="card card-outline-info">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h3>Payment Categories</h3>
                            <div class="form-body">
                                <div class="row" id="paymentCategoriesRow">
                                    <div class="col-md-8">
                                        Name
                                    </div>
                                    <div class="col-md-4">
                                    </div>
                                    @foreach (var category in Model.PaymentCategories)
                                    {
                                        <div class="col-md-11">
                                            <div class="form-group">
                                                <input type="text" id="" name="" class="form-control" placeholder="" value="  @category.Name">
                                            </div>
                                        </div>
                                        <div class="col-md-1">
                                            <a href="javascript:void(0)" class="float-right mt-2"><i class="fas fa-fw fa-trash"></i></a>
                                        </div>
                                    }
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <a href="javascript:void(0)" class="float-right" id="addPaymentCategory"><i class="fas fa-fw fa-plus"></i> add category</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card card-outline-info">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h3>Deposit Categories</h3>
                            <div class="form-body">
                                <div class="row" id="depositCategoriesRow">
                                    <div class="col-md-8">
                                        Name
                                    </div>
                                    <div class="col-md-4">
                                    </div>
                                    @foreach (var category in Model.DepositCategories)
                                    {
                                        <div class="col-md-11">
                                            <div class="form-group">
                                                <input type="text" id="" name="" class="form-control" placeholder="" value="  @category.Name">
                                            </div>
                                        </div>
                                        <div class="col-md-1">
                                            <a href="javascript:void(0)" class="float-right mt-2"><i class="fas fa-fw fa-trash"></i></a>
                                        </div>
                                    }
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <a href="javascript:void(0)" class="float-right" id="addDepositCategory"><i class="fas fa-fw fa-plus"></i> add category</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-12">
            <div class="card card-outline-info">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <button class="btn btn-primary float-right" type="submit">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>